mixin input-date(group_class, date_id, date_label, date_placeholder, date_value, date_class, date_size, date_polyfill, date_min, date_max)
  div(class= 'slds-form-element ' + group_class)
    label(for=date_id)= date_label
    .slds-form-element__control
      input(id=date_id, class= 'slds-input ' + date_class + date_size,type="date", data-format="MM/yyyy", min=date_min, max=date_max, data-polyfill=modal_polyfill, placeholder=date_placeholder, value=date_value)

mixin input-number(number_id, number_label, number_type, number_placeholder, number_value, number_class, number_size, number_min, number_max)
  .form-group
    label(for=number_id)= number_label
    input(id=number_id, class=number_class + number_size, type=number_type, placeholder=number_placeholder, value=number_value, min=number_min, max=number_max)

mixin select(group_class, select_id, select_label, select_class)
  div(class=group_class)
    label(for=select_id, class="slds-form-element__label")= select_label
    .slds-form-element__control
      .slds-select_container
        select(id=select_id, class= 'slds-select ' + select_class)
          block

mixin checkbox(checkbox_id, checkbox_label, checkbox_name, checkbox_class, checkbox_checked)
  if checkbox_checked
    span(class= 'gu-checkbox ' + checkbox_class)
      div.uiInput.uiInputCheckbox
        label.slds-checkbox__label.form-element__label(for=checkbox_id)
          span= checkbox_label
        input(id=checkbox_id, type='checkbox', name=checkbox_name, checked='checked', class="checked")
  else
    span(class= 'gu-checkbox ' + checkbox_class)
      div.uiInput.uiInputCheckbox
        label.slds-checkbox__label.form-element__label(for=checkbox_id)
          span= checkbox_label
        input(id=checkbox_id, type='checkbox', name=checkbox_name)

