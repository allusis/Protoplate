mixin step(step_name, step_url, step_status)
  li(class=step_status)
    a(href=step_url)= step_name

mixin input-text(group_class, input_id, input_label, input_type, input_class, input_placeholder, input_value)
  div(class= 'slds-form-element ' + group_class)
    label.slds-form-element__label(for=input_id)= input_label
    .slds-form-element__control
      input(class= 'slds-input ' + input_class, id=input_id, type=input_type, placeholder=input_placeholder, value=input_value)

mixin input-text-required(group_class, input_id, input_label, input_type, input_class, input_placeholder, input_value, has_error)
  if has_error
    div(class= 'slds-form-element slds-has-error' + group_class)
      label.slds-form-element__label(for=input_id)
        abbr.slds-required(title="required") *
        | input_label
      .slds-form-element__control
        input(class= 'slds-input ' + input_class, id=input_id, type=input_type, placeholder=input_placeholder, value=input_value, required="", aria-describedby= 'error_#' + input_id)
      .slds-form-element__help(id= 'error_' + input_id)
        block
  else
    div(class= 'slds-form-element ' + group_class)
      label.slds-form-element__label(for=input_id)
        abbr.slds-required(title="required") *
        | input_label
      .slds-form-element__control
        input(class= 'slds-input ' + input_class, id=input_id, type=input_type, placeholder=input_placeholder, value=input_value, required="")

