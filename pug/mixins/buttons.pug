mixin btn-action(btn_class, btn_id, btn_title, btn_href, is_disabled, svg_file, svg_id, svg_class, svg_title)
  if is_disabled
    a(href=btn_href, class= 'btn-action ' + btn_class, id=btn_id, disabled="disabled")= btn_title
      span.title= btn_title
      span.icon
        svg(class=svg_class, aria-hidden="true", title=svg_title)
          use(xlink:href= svg_file + '#' + svg_id)
  else
    a(href=btn_href, class= 'btn-action ' + btn_class, id=btn_id)
      span.title= btn_title
      span.icon
        svg(class=svg_class, aria-hidden="true", title=svg_title)
          use(xlink:href= svg_file + '#' + svg_id)
